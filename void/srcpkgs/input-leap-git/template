# Template file for 'input-leap-git'
pkgname=input-leap-git
version=0
revision=1
_commit=53d2a329d4600c71efad56f19b4b5185aaeb4829
build_style=cmake
hostmakedepends="git pkg-config cmake ninja"
makedepends="avahi-compat-libs-devel libcurl-devel Ice-devel libcurl-devel
	openssl-devel qt5-devel qt5-tools-devel libSM-devel libXinerama-devel
	xorg-server-devel libXrandr-devel libXtst-devel"
short_desc="Open-source KVM software"
maintainer="RangHo lee <hello@rangho.me>"
license="GPL-2.0-only"
homepage="https://github.com/input-leap/input-leap"

do_fetch() {
	git clone --recurse-submodule ${homepage} ${wrksrc}
	cd ${wrksrc}
	git checkout ${_commit}
}